@model List<Pharma.Models.VoucherModel>

@{
    ViewData["Title"] = "Index";
}

<div class="alert alert-info">
    Danh sách
</div>

<table class="table">

    <tr class="bg-info">
        <th>Tên</th>
        <th>Mã</th>
        <th>Chỉ số điều kiện</th>
        <th>Chỉ số khuyến mãi</th>
        <th>Kích hoạt</th>
        <th>Action</th>
    </tr>

    @if(Model.Count > 0){
        @foreach(var x in Model){
        <tr>
            <td>
                @x.Name
            </td>
            <td>@x.Code</td>
            <td>
                @x.NumberCondition
                @if(x.Condition == 1){
                    <span>đ</span>
                }else if(x.Condition == 2){
                    <span>đơn</span>
                }
            </td>
            <td>
                @x.NumberVoucher
                @if(x.Voucher == 1){
                    <span>đ</span>
                }else if(x.Voucher == 2){
                    <span>%</span>
                }    
            </td>
            <td>
                @if(x.Active){
                    <span class="text-success">Đã kích hoạt</span>
                }else{
                    <span class="text-danger">Chưa kích hoạt</span>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@x.Id" class="btn">Sửa</a>
                |
                <a asp-action="Delete" asp-route-id="@x.Id" onclick="return confirm(`Xác nhận`)" class="btn">Xóa</a>
            </td>
        </tr>
        }
    }else{
        <tr><td class="text-center text-danger" colspan="10">Không có khuyễn mãi</td></tr>
    }

</table>