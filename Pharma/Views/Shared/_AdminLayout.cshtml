<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>





    <link rel="icon" type="image/x-icon" href="@Url.Content($"/contents/he-thong/")">




    <!--Fonts-->
