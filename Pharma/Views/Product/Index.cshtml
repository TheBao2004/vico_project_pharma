@model List<Pharma.Models.ProductModel>

@using PagedList.Mvc
@using PagedList


@{
    ViewData["Title"] = "Index";
}


<div class="alert alert-info">
    Danh sách
</div>

<a asp-action="Create" class="btn btn-info">Tạo mới</a>

<hr>

<table class="table">

    <tr class="bg-info">
        <th>Tên - Slug</th>
        <th>Từ khóa</th>
        <th>Kích hoạt</th>
        <th>Số lượng</th>
        <th>Giá</th>
        <th>Khuyến mãi</th>
        <th>Danh mục</th>
        <th>Hãng</th>
        <th>Action</th>
    </tr>

    @if (Model.Count > 0)
    {

        @foreach (var x in Model)
        {
            <tr>
                <td><p>@x.Name</p><p class="mb-0">@x.Slug</p></td>
                <td>
                    @x.Keywords => @x.Id
                </td>
                <td>
                    @if(x.Active){
                        <span class="text-success fw-bold">Đã kích hoạt</span>
                    }else{
                        <span class="text-danger fw-bold">Chưa kích hoạt</span>
                    }
                </td>
                <td>@x.Quantity</td>
                <td>@x.Price</td>
                <td>@x.Discount</td>
                <td>@x.Category.Name</td>
                <td>@x.Brand.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@x.Id">Sửa</a>
                    |
                    <a asp-action="Delete">Xóa</a>
                </td>
            </tr>
        }

    }
    else
    {

        <tr>
            <td class="text-center text-danger" colspan="10">Không có sản phẩm</td>
        </tr>

    }

</table>

<br>

